    <script type="text/javascript">
            $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetSuperCategories", "Master")',
                success: function (data) {
                    var dropdown = $('#supercategory');
                    dropdown.empty();
                    dropdown.append('<option selected="true" disabled>--Select--</option>');
                    $.each(data, function (index, item) {
                        console.log("Hi..");
                        console.log(item)
                                dropdown.append($('<option></option>').attr('value', item.superCategoryId).text(item.superCategoryName        ));
                    });
                },
                error: function (error) {
                    console.log('Error retrieving super categories: ' + error);
                }
            });
        });

            $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetCategories", "Master")',
                success: function (data) {
                    var dropdown = $('#category');
                    dropdown.empty();
                    dropdown.append('<option selected="true" disabled>--Select--</option>');
                    $.each(data, function (index, item) {
                        // console.log("Hi..");
                        // console.log(item)
                                dropdown.append($('<option></option>').attr('value', item.categoryId).text(item.categoryName));
                    });
                },
                error: function (error) {
                    console.log('Error retrieving super categories: ' + error);
                }
            });
        });

        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetSubCategories", "Master")',
                success: function (data) {
                    var dropdown = $('#subcategory');
                    dropdown.empty();
                    dropdown.append('<option selected="true" disabled>--Select--</option>');
                    $.each(data, function (index, item) {
                        // console.log("Hi..");
                        // console.log(item)
                        dropdown.append($('<option></option>').attr('value', item.subCategoryId).text(item.subCategoryName));
                    });
                },
                error: function (error) {
                    console.log('Error retrieving super categories: ' + error);
                }
            });
        });

    </script>


